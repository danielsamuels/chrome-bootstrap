{
  "manifest_version": 2,

  "name": "Foundation Overlay",
  "description": "This extension creates an overlay for the Foundation grid system",
  "version": "1.0",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon32_off.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "http://*/*"
  ]
}
